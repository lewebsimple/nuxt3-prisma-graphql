{
  "github": {
    "release": true
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "header": "# Changelog",
      "ignoreRecommendedBump": true,
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Enhancements"
          },
          {
            "type": "fix",
            "section": "Fixes"
          },
          {
            "type": "refactor",
            "section": "Refactors"
          },
          {}
        ]
      }
    }
  }
}